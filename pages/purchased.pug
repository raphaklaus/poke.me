extends layout.pug

block content
  h2 Wow! These are your Pokemons bought so far
  table(class="table")
    thead
      tr
        th #{'#'}
        th Name
        th Description
        th Price
    tbody
      each pokemon in data
        tr
          td
            = pokemon.number
          td
            = pokemon.name
          td
            = pokemon.description
          td
            = pokemon.price
          td
